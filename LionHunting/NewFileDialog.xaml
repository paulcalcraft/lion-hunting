<Window x:Class="LionHunting.NewFileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    Title="New File" Height="149" Width="300">
    <Grid>
        <ComboBox Name="_simulationSelection" Margin="104,9,30,0" Height="25" VerticalAlignment="Top" TabIndex="0" />
        <Label VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="91" Margin="10,9,0,0" Height="25" VerticalAlignment="Top">Simulation</Label>
        <Button Name="_okButton" IsDefault="True" Height="24" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="48" Margin="0,0,12,9" Click="_okButton_Click" TabIndex="100">OK</Button>
        <Button Name="_cancelButton" IsCancel="True" Height="24" VerticalAlignment="Bottom" Margin="158,0,0,9" HorizontalAlignment="Left" Width="52" Click="_cancelButton_Click" TabIndex="101">Cancel</Button>
        <TextBox Margin="104,39,30,47" Name="_populationSize" TabIndex="1" />
        <Label HorizontalAlignment="Left" Margin="10,39,0,47" VerticalContentAlignment="Center" Width="91">Population Size</Label>
    </Grid>
</Window>
